# RABBITMQ_HOST=rabbitmq

######
# DNS
######
DNS_BASE_DOMAIN="example.com"
DNS_MX="
- mx.postal.$DNS_BASE_DOMAIN"
DNS_SMTP="postal.$DNS_BASE_DOMAIN"
DNS_SPF="spf.postal.$DNS_BASE_DOMAIN"
DNS_RP="rp.postal.$DNS_BASE_DOMAIN"
DNS_ROUTES="routes.postal.$DNS_BASE_DOMAIN"
DNS_TRACK="track.postal.$DNS_BASE_DOMAIN"

####################
# SMTP Relay Server
####################
SMTP_HOST="example.com"
SMTP_PORT="25"
# SMTP_USERNAME=""  # generate the credentials within the interface.
# SMTP_PASSWORD=""  # generate the credentials within the interface.
SMTP_FROM_NAME="Postal"
SMTP_FROM_ADDRESS="postal@$DNS_BASE_DOMAIN"