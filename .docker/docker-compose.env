# Web
WEB_HOST="postal.example.com"
WEB_PROTOCOL="https"

# General
GENERAL_USE_IP_POOLS="false"

# Fast Server
FAST_SERVER_ENABLED="false"
FAST_SERVER_BIND_ADDRESS=""

###########
